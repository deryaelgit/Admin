@model Portal.Models.Admin.User

@{
    ViewBag.Title = "Kullanıcı Sil";
}


@if (ViewBag.SuccessMessage != null)
{
<div class="alert alert-success">
    @ViewBag.SuccessMessage
</div>
}

<h3>Bu kullanıcıyı silmek istediğinize emin misiniz?</h3>
<div>
    <h4>Kullanıcı</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Ad Soyad
        </dt>
        <dd class="col-sm-10">
            @Model.FullName
        </dd>
        <dt class="col-sm-2">
            Email
        </dt>
        <dd class="col-sm-10">
            @Model.Email
        </dd>
    </dl>
</div>

<form asp-action="ConfirmDeleteUser" method="post">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <button type="submit" class="btn btn-danger">Sil</button>
        <a asp-action="ListUsers" class="btn btn-secondary">Geri Dön</a>
    </div>
</form>
